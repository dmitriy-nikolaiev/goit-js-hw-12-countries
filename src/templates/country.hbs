<article class="country-card">
  <h1 class="title">{{name}}</h1>
  <div class="wrapper">
    <div class="detail">
      <p class="detail-title">Capital:<span class="detail-text">{{capital}}</span></p>
      <p class="detail-title">Population:<span class="detail-text">{{population}}</span></p>
      <p class="detail-title">â€‹Languages:
        <ul class="languages-list detail-title">
        {{#each languages}}
          <li class="languages-list-item detail-text">{{this.name}}</li>
        {{/each}} 
        </ul>
      </p>
    </div>
    <img class="flag" src="{{flag}}" alt="Flag of {{name}}">
  </div>
</article>